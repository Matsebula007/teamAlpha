MDScreen:
    name:"Home"
    orientation: 'vertical'
    MDBoxLayout:
        orientation: 'vertical'

        MDSeparator:
        # App Bar
        MDBoxLayout:
            padding: '5dp'
            adaptive_height: True
            MDIconButton:
                icon: 'account'

            MDLabel:
                text: 'A Goals'
                halign: 'center'
                valign: 'top'
                font_size: "25dp"
                color: rgba(52,0,231,255)
                font_name: 'assets/Signika-Medium.ttf'

            MDIconButton:
                icon: 'chevron-right'
        MDSeparator:
        # navigatoin screens
        MDBottomNavigation:
            MDBottomNavigationItem:
                name: "Home Screen"
                icon: 'home'
                MDNavigationLayout:
                    ScreenManager:
                        Screen:
                            BoxLayout:
				                orientation: 'vertical'
                                MDTopAppBar:
                                    id : toolbar
                                    pos_hint: {'top': True}
                                    title: 'Select contact'
                                    right_action_items : [['magnify', lambda x : print('search')], ['dots-vertical', lambda x : print(x)]]
                                    left_action_items : [['keyboard-backspace', lambda x : app.change_screen('home screen', 'back')]]
