MDScreen:
    description: description
    name:"add_todo"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        MDIconButton:
            icon:"chevron-left"
            user_font: "40dp"
            pos_hint:{"center_y":.95}
            theme_text_color:'Custom'
            text_color: 1,170/255,23/255,1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "todoScreen"
        MDLabel:
            text: "Add Task"
            pos_hint: {"center_x": .6,"center_y": .9}
            font_name: 'assets/Sono_Monospace-Bold.ttf'
            font_size: "35dp"
        MDFloatLayout:
            size_hint:.85,.08
            pos_hint: {"center_x": .5,"center_y": .78}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id: title
                hint_text:"Title"
                size_hint: 1,None
                pos_hint: {"center_x": .5,"center_y": .5}
                height: self.minimum_height
                multiline:False
                cursor_width: "2dp"
                foreground_color: 1,170/255,23/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/Sono_Monospace-Regular.ttf'
                font_size:"18dp"
        MDFloatLayout:
            size_hint:.85,.28
            pos_hint: {"center_x": .5,"center_y": .57}
            canvas:
                Color:
                    rgba:(238/255,238/255,238/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
            TextInput:
                id: description
                hint_text:"Description"
                size_hint: 1,None
                pos_hint: {"center_x": .5,"center_y": .5}
                height: 180
                multiline:True
                cursor_width: "2dp"
                foreground_color: 1,170/255,23/255,1
                background_color: 0,0,0,0
                padding:15
                font_name:'assets/Sono_Monospace-Regular.ttf'
                font_size:"18dp"
        Button:
            text: "ADD TASK"
            size_hint: .45,.08
            pos_hint: {"center_x": .5,"center_y": .36}
            background_color:0,0,0,0
            font_name: 'assets/Sono_Monospace-Medium.ttf'
            font_size: "18dp"
            color: 1,1,1,1
            on_release:
                app.add_todo(title.text, description.text)
            canvas.before:
                Color:
                    rgba:(1,170/255,23/255,1)
                RoundedRectangle:
                    size:self.size
                    pos:self.pos
                    radius:[15]
        MDBottomAppBar:#m-use nav drawer instead
            md_bg_color:227/255,162/255,23/255,1
            MDTopAppBar:
                title:"Menu"
                icon:'account'
                type:"bottom"
                left_action_items:[["home", lambda x: app.callback(x),"Home"]]
                mode:"free-end"
                icon_color: 2/255,10/255,20/255,1





                    
                    
